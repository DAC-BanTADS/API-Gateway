{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "System",
      "outDir": "./built",
      "allowJs": true,
      "target": "es5",
      "allowUnreachableCode": false,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "typeRoots": [ "./typings" ],
      "outFile": "./built/combined.js"
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "./plugins/**/*",
      "./typings/**/*",
      "./built/**/*"
  ]
}